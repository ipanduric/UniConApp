<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zadaca.ipand.unicon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/uc_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/uc_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DistanceActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".TemperatureActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".SpeedActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".WeightActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".ResultActivity"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>